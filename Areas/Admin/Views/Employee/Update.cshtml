@model Employee
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Employee</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" type="text" class="form-control" id="employee" placeholder="Enter your name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PositionId">Positions</label>
                                <select asp-for="PositionId" asp-items="new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))" class="form-control">
                                    <option selected disabled>Choose Positions</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentId">Departments</label>
                                <select asp-for="DepartmentId" asp-items="new SelectList(ViewBag.Departments,nameof(Department.Id),nameof(Department.Name))" class="form-control">
                                    <option selected disabled>Choose Departments</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-action="index" asp-controller="employee" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>