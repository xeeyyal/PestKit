
@model List<Product>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Table</h4>
                    <a asp-action="create" asp-controller="product" class="btn btn-success ">Create Product</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th> Name</th>
                                    <th> Price</th>
                                    <th> Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Product product in Model)
                                {
                                    count++;
                                    <tr>
                                        <td> @count</td>
                                        <td> @product.Name </td>
                                        <td> @product.Price </td>
                                        <td>
                                            <a asp-action="update" asp-controller="product" asp-route-id="@product.Id" class="btn btn-info "> <i class="mdi mdi-pen"></i> Update</a>
                                            <a asp-action="delete" asp-controller="product" asp-route-id="@product.Id" class="btn btn-danger  "> <i class="mdi mdi-delete"></i> Delete</a>
                                            <a asp-action="details" asp-controller="product" asp-route-id="@product.Id" class="btn btn-secondary "> <i class="mdi mdi-alert-box"></i> Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>