@model CreateBlogVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">BLOG TABLE</h4>

                        <form class="forms-sample" enctype="multipart/form-data" method="post">
                            <div class="form-group">
                            <div class="form-group">
                                <label asp-for="Photo">Choose new Photo</label>
                                    <input asp-for="Photo" type="text" class="form-control" id="blog" placeholder="Enter">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                                <label asp-for="Title">Title</label>
                                <input asp-for="Title" type="text" class="form-control" id="blog" placeholder="Enter">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" type="text" class="form-control" id="blog" placeholder="Enter">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ReplyCount">Comments</label>
                                <input asp-for="ReplyCount" type="text" class="form-control" id="blog" placeholder="Enter">
                                <span class="text-danger" asp-validation-for="ReplyCount"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-action="index" asp-controller="blog" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
