
@model RegisterVM 
 
<!-- Register Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-4 offset-4">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" placeholder="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Surname</label>
                    <input asp-for="Surname" placeholder="Surname" class="form-control" />
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" placeholder="Username" class="form-control" />
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" placeholder="Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" placeholder="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <div class="form-check">
                        <label class="form-check-label">Male</label>
                        <input type="radio" asp-for="Gender" value="Male" class="form-check-input" />
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">Female</label>
                        <input type="radio" asp-for="Gender" value="Female" class="form-check-input" />
                    </div>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-warning w-100">Register</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Register End -->